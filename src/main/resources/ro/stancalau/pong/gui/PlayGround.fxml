<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-preview-i18n-resource ../../../../lang_en.properties?>
<?scenebuilder-stylesheet ../../../../main.css?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="300.0"
           prefWidth="460.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ro.stancalau.pong.gui.PlayGroundPresentation">
    <Pane fx:id="pane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="main-window"
          StackPane.alignment="CENTER">
        <StackPane.margin>
            <Insets bottom="60.0"/>
        </StackPane.margin>
    </Pane>
    <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="60.0" StackPane.alignment="BOTTOM_CENTER">
        <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                <children>
                    <Button fx:id="startButton" mnemonicParsing="false" onAction="#onPressStart" prefWidth="60.0"
                            text="start"/>
                    <GridPane alignment="CENTER" HBox.hgrow="NEVER">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <Label text="%fps.current"/>
                            <Label fx:id="fpsLabel" prefWidth="70.0" text="-" GridPane.columnIndex="1"/>
                            <Label text="%fps.min" GridPane.rowIndex="1"/>
                            <Label text="%fps.max" GridPane.rowIndex="2"/>
                            <Label fx:id="fpsLabelMin" prefWidth="70.0" text="-" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                            <Label fx:id="fpsLabelMax" prefWidth="70.0" text="-" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                        </children>
                    </GridPane>
                </children>
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </HBox>
        </children>
    </VBox>
</StackPane>
